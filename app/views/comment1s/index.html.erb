<p id="notice"><%= notice %></p>

<h1>Comment1s</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comment1s.each do |comment1| %>
      <tr>
        <td><%= comment1.content %></td>
        <td><%= link_to 'Show', comment1 %></td>
        <td><%= link_to 'Edit', edit_comment1_path(comment1) %></td>
        <td><%= link_to 'Destroy', comment1, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

